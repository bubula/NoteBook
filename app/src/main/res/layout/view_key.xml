<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_background"
    android:gravity="bottom"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_background" />

    <RelativeLayout
        android:id="@+id/key_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listview_back"
        android:gravity="center_vertical"
        android:minHeight="36dp"
        android:paddingTop="6dp" >

        <ImageButton
            android:id="@+id/key_show_voice"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@drawable/chatting_setmode_voice_btn" />

        <RelativeLayout
            android:id="@+id/key_keyboard_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/key_more_show"
            android:layout_toRightOf="@+id/key_show_voice"
            android:maxHeight="196dp"
            android:minHeight="28dp" >

            <EditText
                android:id="@+id/key_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dip"
                android:background="@null"
                android:maxLines="5"
                android:minHeight="40dp"
                android:onClick="editClick"
                android:paddingBottom="3dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="3dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/key_editText"
                android:background="#C0C0C0" />

            <ImageButton
                android:id="@+id/key_face_show"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:minWidth="48dp"
                android:src="@drawable/chatting_biaoqing_btn_normal"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/key_face_hide"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:minWidth="48dp"
                android:src="@drawable/chatting_biaoqing_btn_enable"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/key_record_voice"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/key_more_show"
            android:layout_toRightOf="@+id/key_show_voice"
            android:background="@drawable/chat_edt_bg"
            android:text="按住说话"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/key_more_show"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@drawable/type_select_btn_nor"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/key_more_hide"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
           
            android:minWidth="36dp"
            android:src="@drawable/type_select_btn_pressed"
            android:visibility="invisible" />

        <Button
            android:id="@+id/key_send"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/edit_serch_btn"
            android:gravity="center"
            android:minWidth="36dp"
            android:text="发送"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/key_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/key_keyboard_rl"
            android:layout_toLeftOf="@+id/key_keyboard_rl"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@drawable/chatting_setmode_keyboard_btn"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_background" />

    <RelativeLayout
        android:id="@+id/face_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
        <com.bubula.notebook.key.ScrollGridLayout
            android:id="@+id/face_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.bubula.notebook.key.ScrollGridLayout>

        <com.bubula.notebook.key.ScrollGridLayout
            android:id="@+id/face_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.bubula.notebook.key.ScrollGridLayout>
    </RelativeLayout>

</LinearLayout>