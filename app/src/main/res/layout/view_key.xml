<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_background"
    android:gravity="bottom"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/key_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listview_back"
        android:gravity="center_vertical"
        android:minHeight="36dp"
        android:paddingTop="6dp">


        <RelativeLayout
            android:id="@+id/rl_key_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_key_board"
            android:maxHeight="196dp"
            android:minHeight="28dp">

            <EditText
                android:id="@+id/edt_key_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dip"
                android:background="@null"
                android:maxLines="5"
                android:minHeight="40dp"
                android:paddingBottom="3dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="3dp"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/iv_key_emoji"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_key_pic"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@mipmap/key_emoji"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/iv_key_board"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_key_pic"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@mipmap/key_edit"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/iv_key_pic"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:background="#00000000"
            android:minWidth="36dp"
            android:src="@mipmap/key_pic"
            android:visibility="visible" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/face_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>